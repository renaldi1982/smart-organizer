<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>	    	
	
    <!-- Application theme. -->    
    <style name="AppTheme" parent="@android:style/Theme.Holo">
    	<item name="android:actionModeCloseButtonStyle">@style/NoCloseButton</item>     		      	   
	</style>  	
    
    <style name="calendar_event_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FF6600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>
    
    <style name="NoCloseButton" parent="@android:style/Widget.ActionButton.CloseMode">
	    <item name="android:visibility">gone</item>
	</style>
    
</resources>
